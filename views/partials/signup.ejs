<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"> <!-- load fontawesome -->
<div class="signup-modal hidden fixed top-0 bottom-0 right-0 left-0 justify-center items-center">
   <div class="signup-modal-inner shadow-md dark:shadow-black text-center bg-white dark:bg-gray-900 rounded-3xl">
      <h2 class="my-2 text-[#222] text-3xl font-sans dark:text-gray-200">Sign Up</h2>
      <p class="signup-text mb-4 text-[#444] font-nuntio text-2xl dark:text-gray-500">Join us!</p>
      <form action="user/create" method="POST" id="signup-from-homepage">
         <input class="input-text mb-1 inline-block w-full shadow-inner dark:shadow-black bg-white dark:bg-gray-800" type="text" name="name" placeholder="Name" required><br>
         <input class="input-text mb-1 inline-block w-full shadow-inner dark:shadow-black bg-white dark:bg-gray-800" type="email" name="emil" placeholder="Email" required><br>
         <input class="input-text inline-block w-full shadow-inner dark:shadow-black bg-white dark:bg-gray-800" type="password" name="pscd" placeholder="Password" required><br>
         <input class="inline-block w-full -mb-8 bg-gradient-to-br from-amber-400 to-orange-400 shadow-lg dark:shadow-none shadow-orange-600 px-5 py-3 my-2.5 text-white text-lg font-nunito font-semibold rounded-xl" type="submit" value="Create Account">
      </form>
      <button class="inline-block w-full mt-5 mb-2 bg-amber-400 dark:bg-amber-500 shadow-lg shadow-amber-600 dark:shadow-none px-5 py-3 my-2.5 text-white text-lg font-nunito font-semibold rounded-xl" onclick="document.querySelector('.signin-modal').style.display = 'flex'; document.querySelector('.signup-modal').style.display = 'none'">Enter Account</button>
   </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
$("#signup-from-homepage").submit(function(event) {
   event.preventDefault();
   $.post("/user/create", {
      name: this.name.value,
      emil: this.emil.value,
      pscd: this.pscd.value,
   }).done(function(data) {
      document.querySelector(".signup-text").textContent = data;
      if (data == "Success!") { location.reload(); }
   });
});
</script>